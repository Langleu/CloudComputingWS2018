1. aws configure 

2. ssh-keygen -t rsa -b 4096 -C “email”
# creates a local ssh key with 4096 bit

3. aws upload-ssh-public-key --user-name $VALUE --ssh-public-key-body $SVALUE

4. aws ec2 create-security-group —group-name $NAME —description “Security Group for CC”

#icmp
aws ec2 authorize-security-group-ingress --group-id $NAME --ip-permissions IpProtocol=icmp,FromPort=-1,ToPort=-1,IpRanges=[{CidrIp=0.0.0.0/0}]

#ssh
aws ec2 authorize-security-group-ingress --group-id $NAME --protocol tcp --port 22 --cidr 0.0.0.0/0

5. https://console.aws.amazon.com/vpc/
aws ec2 create-subnet --vpc-id $VPC_ID  --cidr-block 10.0.0.0/24 --ipv6-cidr-block 2001:db8:1234:a100::/64

6. aws opsworks --region eu-central-1 create-instance --stack-id $ID --layer-ids $LID --hostname cc21--instance-type t3.medium --os “Ubuntu” --subnet $SID
# Creates a vm in Frankfurt with 2 vCPU and 4 GB RAM and Ubuntu

7. ping $IP

8. ssh $IP